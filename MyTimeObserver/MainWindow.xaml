<Window x:Class="Chatter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTimeObserver"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"></RowDefinition>
            <RowDefinition Height="129*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView Name="messageBox" Margin="0,55,300,0" Grid.RowSpan="2"/>
        <ListView Name="loginBox" Margin="300,55,0,0" Grid.RowSpan="2"/>

        <TextBox Width="300px" Height="50px" Name="textBoxName" Background="Aqua" Margin="0,0,300,125"/>
        <Button Width="100px" Height="50px" Grid.Row="0" Click="Button_Click" Margin="300,0,200,125">Create User</Button>
        <Label Width="200px" Height="50px" Name="numberLabel" Grid.Row="0" Margin="400,0,0,125">Nr. Observers:</Label>
    </Grid>
</Window>
